<apex:page standardController="Consultant__c">
    <body>
        <apex:form >
      <apex:pageBlock title="New Consultant">
        <!--Buttons -->
         <apex:pageBlockButtons >
            <apex:commandButton action="{!save}" value="Save"/>
         </apex:pageBlockButtons>
         <!--Input form -->
         <apex:pageBlockSection columns="1">
         <apex:inputField value="{!Consultant__c.Name}"/>
         <apex:inputField value="{!Consultant__c.FirstName__c}"/>
         <apex:inputField value="{!Consultant__c.LastName__c}"/>
             <apex:inputField value="{!Consultant__c.Employer__c}"/>
        </apex:pageBlockSection>
      </apex:pageBlock>
      </apex:form>
    </body>
</apex:page>